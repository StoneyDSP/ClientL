{
	"version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 2
    },
    "include": [
        "CMakeDebugPresets.json",
        "CMakeVendorPresets.json"
    ],
    "configurePresets": [
		{
			"name": "linux-base",
			"hidden": true,
			"description": "Target Linux with the GNUC toolset and Ninja Multi-Config generator.",
            "inherits": [
                "linux-debug-settings",
                "linux-vendor-map"
            ],
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/installed/${presetName}",
			"environment": {
                "VCPKG_BINARY_SOURCES": "clear;nuget,GitHub,readwrite",
                "VCPKG_USE_NUGET_CACHE": "true"
            },
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_TOOLCHAIN_FILE": "/home/stoneydsp/vcpkg/scripts/buildsystems/vcpkg.cmake"
            },
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
            "name": "x64-linux",
            "displayName": "x64",
            "description": "Target Linux (64-bit) with the GNUC toolset and Ninja Multi-Config generator.",
            "inherits":[
                "linux-base"
            ],
            "toolset": {
                "value": "host=x64,",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "VCPKG_TARGET_ARCHITECTURE": "x64",
                "VCPKG_DEFAULT_TRIPLET": "x64-linux",
                "VCPKG_DEFAULT_HOST_TRIPLET": "x64-linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "linux-gcc-x64"
                }
            }
        },
        {
            "name": "x86-linux",
            "displayName": "x86",
            "description": "Target Linux (64-bit) with the GNUC toolset and Ninja Multi-Config generator.",
            "inherits": [
                "linux-base"
            ],
            "toolset": {
                "value": "host=x86",
                "strategy": "external"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "VCPKG_TARGET_ARCHITECTURE": "x64",
                "VCPKG_DEFAULT_TRIPLET": "x64-linux",
                "VCPKG_DEFAULT_HOST_TRIPLET": "x64-linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "linux-gcc-x86"
                }
            }
        }
	]
}
